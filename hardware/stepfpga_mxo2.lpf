BLOCK RESETPATHS ;
BLOCK ASYNCPATHS ;

# ═══════════════════════════════════════════════════════════════════════════
# STEPFPGA MXO2-Core Pin Constraints
# ═══════════════════════════════════════════════════════════════════════════

# Clock (12MHz Onboard Oscillator)
LOCATE COMP "WF_CLK" SITE "C1" ;
IOBUF PORT "WF_CLK" IO_TYPE=LVCMOS33 ;
FREQUENCY PORT "WF_CLK" 25.0 MHz; # Relaxed timing for synthesis

# Button (KEY1 - Active Low)
LOCATE COMP "WF_BUTTON" SITE "L14" ;
IOBUF PORT "WF_BUTTON" IO_TYPE=LVCMOS33 PULLMODE=UP ;

# LEDs (Onboard LED1-LED8 - Active Low)
LOCATE COMP "WF_LED[0]" SITE "N13" ; # LED1
LOCATE COMP "WF_LED[1]" SITE "M12" ; # LED2
LOCATE COMP "WF_LED[2]" SITE "P12" ; # LED3
LOCATE COMP "WF_LED[3]" SITE "M11" ; # LED4
LOCATE COMP "WF_LED[4]" SITE "P11" ; # LED5
LOCATE COMP "WF_LED[5]" SITE "N10" ; # LED6
LOCATE COMP "WF_LED[6]" SITE "N9" ;  # LED7
LOCATE COMP "WF_LED[7]" SITE "P9" ;  # LED8

IOBUF PORT "WF_LED[0]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[1]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[2]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[3]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[4]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[5]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[6]" IO_TYPE=LVCMOS33 ;
IOBUF PORT "WF_LED[7]" IO_TYPE=LVCMOS33 ;
